root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
# Convention for a lot of modern code is spaces:
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120
quote_type = single

[*.conf]
indent_size = 4

[{*.go,go.mod,go.sum}]
indent_style = tab
indent_size = 4

[{Makefile,*.makefile,*.mkf}]
indent_style = tab
indent_size = 8
