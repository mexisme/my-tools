# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
indent_style = spaces
indent_size = 2
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true

[*.go]
indent_style = tab
indent_size = 4

[*.py]
indent_size = 4

[{*.mkmf,Makefile}]
indent_style = tab
indent_size = 4
